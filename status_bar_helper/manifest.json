{
  "manifest_version": 3,
  "name": "Status Bar Helper",

  "description": "This is a helper extension for status bar.",
  "version": "5",
  "icons": {
    "48": "48.png",
    "64": "64.png",
    "128": "128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://music.youtube.com/*", "*://youtube.com/*", "*://www.youtube.com/*", "*://radiotunes.com/*", "*://www.radiotunes.com/*"],
      "js": ["content_script_music.js"]
    }
  ]
}
